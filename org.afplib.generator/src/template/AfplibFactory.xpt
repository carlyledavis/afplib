			start++; // length is not considered to be part of cs -> model error
			
			switch(m.eClass().getClassifierID()) {
			«FOREACH groupMembers AS t»
			«IF t.type.toString() == "CS"»
			case AfplibPackage.«camelCase2Constant(t.name)»: {
